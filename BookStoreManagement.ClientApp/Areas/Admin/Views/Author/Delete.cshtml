@using BookStoreManagement.ClientApp.Models.ViewModels
@model AuthorViewModel

@{
   Layout = null;
}

<form method="post" id="DeleteAuthorModal" asp-action="Delete" asp-controller="Author" onsubmit="return AjaxDelete(this);">
   <input type="hidden" asp-for="@Model.Author.Id" />
   <input type="hidden" asp-for="@Model.Author.Name" />
   <input type="hidden" asp-for="@Model.Author.Description" />
   <p>Are you sure to delete Author: <strong>@Model.Author.Name</strong>?</p>
</form>
<div class="modal-footer">
   <button type="button" class="btn btn-secondary" onclick="hideModal('delete-form-modal')">No</button>
   <button type="submit" class="btn btn-danger" form="DeleteAuthorModal">Yes</button>
</div>