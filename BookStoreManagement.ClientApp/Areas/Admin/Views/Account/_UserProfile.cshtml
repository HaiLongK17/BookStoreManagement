@using BookStoreManagement.ClientApp.Models.DTO
@model UserDto

<div class="text-center">
   <img class="profile-user-img img-fluid img-circle" src="@Model.Avatar" alt="User profile picture">
</div>
<h3 class="profile-username text-center">@Model.DisplayName</h3>
<p class="text-muted text-center">@Model.Role</p>
<ul class="list-group list-group-unbordered mb-3">
   <li class="list-group-item">
      <b>Email</b> <a class="float-right">@Model.Email</a>
   </li>
   <li class="list-group-item">
      <b>Phone</b> <a class="float-right">@Model.PhoneNumber</a>
   </li>
</ul>