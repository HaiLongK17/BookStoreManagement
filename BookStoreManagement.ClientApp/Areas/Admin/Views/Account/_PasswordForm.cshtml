@using BookStoreManagement.ClientApp.Models.DTO
@model ChangePasswordDto

<form method="post" class="form-horizontal" asp-action="ChangePassword" onsubmit="return AjaxPostPassword(this);">
   <div class="form-group row">
      <label class="col-sm-2 col-form-label">Current Password</label>
      <div class="col-sm-10">
         <input type="password" asp-for="Password" required class="form-control" placeholder="Current Password">
      </div>
   </div>
   <div class="form-group row">
      <label class="col-sm-2 col-form-label">New Password</label>
      <div class="col-sm-10">
         <input type="password" asp-for="NewPassword" required class="form-control" placeholder="New Password">
      </div>
   </div>
   <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
         <button type="submit" class="btn btn-danger">Save changes</button>
      </div>
   </div>
</form>
