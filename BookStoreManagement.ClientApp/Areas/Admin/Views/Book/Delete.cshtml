@using BookStoreManagement.ClientApp.Models.ViewModels
@model BookViewModel

@{
   Layout = null;
}

<form method="post" id="DeleteBookModal" asp-action="Delete" asp-controller="Book" onsubmit="return AjaxDelete(this);">
   <input type="hidden" asp-for="@Model.Id" />
   <input type="hidden" asp-for="@Model.CurrentBook.Title" />
   <p>Are you sure to delete Publisher: <strong>@Model.CurrentBook.Title</strong>?</p>
</form>
<div class="modal-footer">
   <button type="button" class="btn btn-secondary" onclick="hideModal('delete-form-modal')">No</button>
   <button type="submit" class="btn btn-danger" form="DeleteBookModal">Yes</button>
</div>
