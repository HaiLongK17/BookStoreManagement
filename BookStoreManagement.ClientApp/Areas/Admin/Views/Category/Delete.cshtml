@using BookStoreManagement.ClientApp.Models.ViewModels
@model CategoryViewModel

@{
   Layout = null;
}

<form method="post" id="DeleteCategoryModal" asp-action="Delete" asp-controller="Category" onsubmit="return AjaxDelete(this);">
   <input type="hidden" asp-for="@Model.Category.Id" />
   <input type="hidden" asp-for="@Model.Category.Name" />
   <input type="hidden" asp-for="@Model.Category.Description" />
   <p>Are you sure to delete Category: <strong>@Model.Category.Name</strong>?</p>
</form>
<div class="modal-footer">
   <button type="button" class="btn btn-secondary" onclick="hideModal('delete-form-modal')">No</button>
   <button type="submit" class="btn btn-danger" form="DeleteCategoryModal">Yes</button>
</div>