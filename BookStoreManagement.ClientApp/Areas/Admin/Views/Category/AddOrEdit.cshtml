@using BookStoreManagement.ClientApp.Models.ViewModels
@model CategoryViewModel

@{
   Layout = null;
}

<form method="post" id="AddOrEditCategoryModal" asp-action="AddOrEdit" asp-controller="Category" onsubmit="return AjaxPost(this);">
   <div class="form-group">
   @if (Model.Category != null)
   {
      <input type="hidden" asp-for="@Model.Category.Id" />
      <input type="hidden" asp-for="@Model.Category.Name" />
      <input type="hidden" asp-for="@Model.Category.Description" />
      <label asp-for="HandleCategory.Name"></label>
      <input asp-for="HandleCategory.Name" required class="form-control">
   }
   </div>
   <div class="form-group">
      <label asp-for="HandleCategory.Description"></label>
      @Html.TextAreaFor(x => x.HandleCategory.Description, new { @id = "SummernoteDescription" })
   </div>
</form>
<div class="modal-footer text-right">
   <button type="button" class="btn btn-secondary" onclick="hideModal('common-form-modal')">Close</button>
   <button type="submit" class="btn btn-success" form="AddOrEditCategoryModal">Save Changes</button>
</div>

<script>
   $(document).ready(function() {
      $('#SummernoteDescription').summernote({
          height: 150
      });
   });
</script>