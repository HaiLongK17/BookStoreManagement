@using BookStoreManagement.ClientApp.Models.ViewModels
@model PublisherViewModel

@{
   Layout = null;
}

<div class="form-group">
   <label asp-for="Publisher.Name"></label>
   <input asp-for="Publisher.Name" class="form-control">
</div>
<div class="form-group">
   <label asp-for="Publisher.Description"></label>
   @Html.TextAreaFor(x => x.Publisher.Description, new { @id = "SummernoteDescription" })
</div>
<div class="modal-footer text-right">
   <button type="button" class="btn btn-secondary" onclick="hideModal('common-form-modal')">Close</button>
</div>

<script>
   $(document).ready(function() {
      $('#SummernoteDescription').summernote({
          height: 150
      });
   });
</script>