@using BookStoreManagement.ClientApp.Models.DTO
@model IEnumerable<PublisherDto>

<div class="card-body table-responsive p-0" id="author-table">
   @if (Model.Count() > 0)
   {
      <table class="table table-bordered table-hover text-nowrap">
         <thead class="bg-dark">
            <tr class="text-white">
               <th style="width: 20px; text-align: center; vertical-align: middle">#</th>
               <th style="min-width: 400px">Publisher Name</th>
               <th style="width: 150px; text-align: center; vertical-align: middle">Book Count</th>
               <th style="width: 250px; text-align: center; vertical-align: middle">Action</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var item in Model)
            {
               <tr>
                  <td style="text-align: center; vertical-align: middle">@item.Id</td>
                  <td>@item.Name</td>
                  <td style="text-align: center; vertical-align: middle">@item.BookCount</td>
                  <td class="project-actions text-center" style="width: 100px; text-align: center; vertical-align: middle">
                     <button class="btn btn-primary btn-sm mr-1 ml-1" title="Detail" type="button"
                       onclick="showCommonModal('@Url.Action("Detail", "Publisher", new { id = item.Id }, Context.Request.Scheme)', 'Publisher Detail')">
                        <i class="fas fa-eye"></i>
                     </button>
                     <button class="btn btn-info btn-sm mr-1 ml-1" title="Edit" type="button"
                       onclick="showCommonModal('@Url.Action("AddOrEdit", "Publisher", new { id = item.Id }, Context.Request.Scheme)', 'Update Publisher')">
                        <i class="fas fa-pencil-alt"></i>
                     </button>
                     <button class="btn btn-danger btn-sm mr-1 ml-1" title="Delete" type="button"
                       onclick="showDeleteModal('@Url.Action("Delete", "Publisher", new { id = item.Id }, Context.Request.Scheme)', 'Delete Publisher')">
                        <i class="fas fa-trash"></i>
                     </button>
                  </td>
               </tr>
            }
         </tbody>
      </table>
   }
   else
   {
      <p>Have no any Publisher was added...</p>
   }
</div>
