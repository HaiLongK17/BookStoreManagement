@using BookStoreManagement.ClientApp.Models.ViewModels
@model PublisherViewModel

@{
   Layout = null;
}

<form method="post" id="DeletePublisherModal" asp-action="Delete" asp-controller="Publisher" onsubmit="return AjaxDelete(this);">
   <input type="hidden" asp-for="@Model.Publisher.Id" />
   <input type="hidden" asp-for="@Model.Publisher.Name" />
   <input type="hidden" asp-for="@Model.Publisher.Description" />
   <p>Are you sure to delete Publisher: <strong>@Model.Publisher.Name</strong>?</p>
</form>
<div class="modal-footer">
   <button type="button" class="btn btn-secondary" onclick="hideModal('delete-form-modal')">No</button>
   <button type="submit" class="btn btn-danger" form="DeletePublisherModal">Yes</button>
</div>